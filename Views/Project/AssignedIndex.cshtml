
@model List<BugTracker.Models.ProjectModel>

@{
    ViewData["Title"] = "AssignedIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="d-flex flex-column col-10 mt-5 ml-auto mr-auto">
    <h1>Projects List</h1>
    <form method="post">
        <table class="table datatable prIndex">
            <thead>
                <tr>
                    <th width="40%">Title</th>
                    <th width="40%">Description</th>
                    <th width="20%"> Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>
                            <a asp-controller="Project" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary text-white">
                                Details
                                <i class="fas fa-info"></i>
                            </a>
                        </td>
                    </tr>
                }



            </tbody>

        </table>
    </form>

</div>


